<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Account Login
            </div>
            <div class="card-body">
                <form action="/signin" method="POST">
                    <div class="form-group">
                        <input 
                            type="email" 
                            name="email" 
                            placeholder="email" 
                            class="form-control"
                        >
                    </div>
                    <div class="form-group">
                        <input 
                            type="password" 
                            name="password" 
                            placeholder="password" 
                            class="form-control"
                        >
                    </div>
                    <button class="btn btn-primary btn-block"> 
                        Log In
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>